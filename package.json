{
  "name": "hardhat-template",
  "version": "1.0.0",
  "description": "this is a hardhat template",
  "main": "hardhat.config.ts",
  "scripts": {
    "compile": "hardhat compile && hardhat typechain",
    "test": "hardhat test",
    "coverage: hardhat": "hardhat coverage",
    "prettier": "npx prettier -w .",
    "prepare": "husky install",
    "build:ts": "tsc -b",
    "husky:pre-commit": "npm run prettier && git add .",
    "slither": "slither . --filter-paths \"lib|test|node_modules\"",
    "docs:host": "forge doc --serve --port 4000",
    "coverage:foundry": "forge coverage --report lcov && genhtml lcov.info --branch-coverage --output-dir coverage",
    "predeploy": "source .env",
    "hardhat:deploy:local": "npx hardhat run --network localhost scripts/deployProtocol.ts",
    "hardhat:deploy:demo": "npx hardhat run --network localhost scripts/deployProtocolWithDemo.ts",
    "deploy:local:cube3": "SIMULATION=0 forge script scripts/foundry/AnvilDeploy.s.sol -vvvvv --rpc-url http://127.0.0.1:8545 --broadcast --optimizer-runs 200 --ffi",
    "simulate:local:cube3": "SIMULATION=1 forge script scripts/foundry/AnvilDeploy.s.sol -vvvvv --rpc-url http://127.0.0.1:8545 --optimizer-runs 200",
    "deploy:local:dummy": "SIMULATION=0 forge script scripts/foundry/DeployDummyIntegration.s.sol --rpc-url http://127.0.0.1:8545 --broadcast --ffi",
    "deploy:goerli:cube3": "SIMULATION=0 source .env && forge script scripts/foundry/GoerliDeploy.s.sol -vvvvv --rpc-url $GOERLI_RPC_URL --optimizer-runs 200 --broadcast --ffi",
    "simulate:goerli:cube3": "SIMULATION=1 source .env && forge script scripts/foundry/GoerliDeploy.s.sol -vvvvv --rpc-url $GOERLI_RPC_URL --optimizer-runs 200",
    "deploy:local:mock": "forge script scripts/foundry/DeployMockProtocol.s.sol -vvvvv --rpc-url http://127.0.0.1:8545 --broadcast"
  },
  "keywords": [
    "hardhat",
    "solidity",
    "web3"
  ],
  "author": "Cube3.ai",
  "license": "MIT",
  "installConfig": {
    "hoistingLimits": "dependencies"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/hardhat-upgrades": "^2.0.2",
    "@typechain/ethers-v6": "^0.4.3",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chai": "^4.3.7",
    "dotenv": "^16.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^5.2.0",
    "hardhat": "^2.17.0",
    "husky": "^8.0.2",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.0.0",
    "solhint": "^3.4.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.8.2",
    "@openzeppelin/contracts-upgradeable": "^4.8.2"
  }
}
